{
  "name": "sahar",
  "version": "1.0.0",
  "repository": "github:ernilambar/sahar",
  "scripts": {
    "build": "yarn run build:scss && yarn run build:js",
    "build:pot": "yarn run textdomain && yarn run language",
    "clean": "del 'deploy/'",
    "deploy": "yarn run clean && yarn run deploy:files && yarn run deploy:dirs",
    "deploy:dirs": "cpy --parents 'assets/**' 'inc/**' 'languages/**' 'template-parts/**' 'templates/**' 'deploy/sahar' ",
    "deploy:files": "cpy '*.css' '*.php' 'readme.txt' 'screenshot.png'  'deploy/sahar' ",
    "prerelease": "yarn run rtl && yarn run build:pot && yarn run build:images",
    "release": "yarn run deploy",
    "build:scss": "yarn run scss -s | yarn run optimizecss -s > style.css",
    "scss": "node-sass src/sass/front/style.scss -o '.' --source-map-root file://${PWD}/ --source-map-embed true",
    "optimizecss": "postcss style.css -o style.css --use autoprefixer -m",
    "build:images": "imagemin src/images/*.* --out-dir=assets/images/",
    "textdomain": "wpi18n addtextdomain --textdomain=sahar",
    "rtl": "rtlcss style.css style-rtl.css",
    "build:js": "yarn run js",
    "start" : "concurrently --kill-others \"yarn run serve\" \"yarn run watch\"",
    "serve": "browser-sync start --proxy 'http://staging.local/' --files \"assets/css/*.css, assets/js/*.js, **/*.php, !node_modules/**/*.html\" ",
    "js": "babel src/scripts/*.js --out-dir assets/js",
    "watch": "concurrently --kill-others \"yarn run watch:scss\" \"yarn run watch:js\"",
    "watch:scss": "onchange 'src/sass/**/*.scss' -- yarn run build:scss",
    "watch:js": "onchange 'src/scripts/**/*.js' -- yarn run build:js",
    "language": "wpi18n makepot --domain-path=languages --exclude=vendor,deploy --textdomain=sahar"
  },
  "author": "Nilambar Sharma",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "autoprefixer": "^9.8.4",
    "browser-sync": "^2.26.7",
    "concurrently": "^5.2.0",
    "cpy-cli": "^3.1.1",
    "del-cli": "^3.0.1",
    "imagemin-cli": "^6.0.0",
    "node-sass": "^4.14.1",
    "node-wp-i18n": "^1.2.3",
    "onchange": "^7.0.2",
    "postcss-cli": "^7.1.1",
    "rtlcss": "^2.5.0"
  },
  "browserslist": [
    "last 4 versions"
  ],
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  }
}
